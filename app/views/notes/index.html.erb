<div class="row">
  <div class="well">
    <h2>All notes</h2>
      <% @notes.each do |note| %>
        <p><%= link_to note.title, note_path(note) %></p>
        <p><%= note.content %></p>
        <p><%= time_ago_in_words(note.created_at) %></p>
      <% end %>

    <p><%= link_to "Add a Note", new_note_path %></p>
  </div>
</div>
